@model EscuelaMaster.Models.TblHobbiesUsuario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Asignar hobbies</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Gestión de Hobbies</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            <div class="col-md-6">
                <label>Seleccione el usuario:</label>
                @Html.DropDownList("UsuarioID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UsuarioID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Asocie el hobbie</label>
                @Html.DropDownList("HobbieID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HobbieID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Asignar" class="btn btn-default" />
                <span>@Html.ActionLink("Regresar...", "Index")</span>
            </div>
            <div>
              
            </div>
        </div>
    </div>
}

    
