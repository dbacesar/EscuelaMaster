@model EscuelaMaster.Models.TblHobbiesUsuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resignar hobbies</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hobbies</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HobbiesUsuario)

        <div class="form-group">
            <div class="col-md-6">
                <label>Usuario</label>
                @Html.DropDownList("UsuarioID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UsuarioID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <label>Hobbie</label>
                @Html.DropDownList("HobbieID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HobbieID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Reasignar" class="btn btn-default" />
                @Html.ActionLink("Regresar...", "Index")
            </div>
        </div>
    </div>
}
