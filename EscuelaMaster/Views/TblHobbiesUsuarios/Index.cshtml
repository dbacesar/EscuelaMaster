@model IEnumerable<EscuelaMaster.Models.TblHobbiesUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UsuarioID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<h2>Gestión de hobbies</h2>


<p>
    @Html.ActionLink("Asociar hobbies", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Hobbie
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TblUsuario.NombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hobbies.NombreHobbie)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.HobbiesUsuario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.HobbiesUsuario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.HobbiesUsuario })
        </td>
    </tr>
}

</table>
